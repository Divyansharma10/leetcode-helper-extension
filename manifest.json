{
  "manifest_version": 3,
  "name": "LeetCode Guided Helper",
  "version": "1.0",
  "description": "Helps you solve LeetCode questions with guided hints using Gemini API",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://leetcode.com/problems/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}